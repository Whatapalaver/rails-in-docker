<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <% if flash[:alert] %>
        <div class="alert alert-warning"><%= flash[:alert] %></div>
      <% end %>
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: admin_museum_api_search_path, method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :search_term, 'Search for an object '%>
            <select name="searchtype" id="searchtype">
              <option value="id" selected="selected">systemNumber</option>
              <option value="search_term">search_term</option>
            </select>
            <%= text_field_tag :search_term, nil, placeholder: 'Eg. O123', class: 'form-control' %>
          </div>

          <%= button_tag 'Search', class: 'btn btn-success btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
  <% if @search_term %>
    <p>You searched for <%= @search_term %></p>
  <% end %>
  <% if @objects %>
    <% @objects.each do |ob| %>
      <div class="row mt-5">
        <div class="col-lg-6">
          <% if ob['_primaryImageId'] %>
            <%= image_tag("https://framemark.vam.ac.uk/collections/#{ob['_primaryImageId']}/full/!140,140/0/default.jpg") %>
          <% else %>
            <%= image_tag("https://placehold.it/140x140?text=No+Image") %>
          <% end %>
          <%= ob["_primaryTitle"] %>
          <%= link_to 'Import', new_admin_museum_object_path(ob) %>
        </div>
      </div>
    <% end %> 
  <% end %>
</div>


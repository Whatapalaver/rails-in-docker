<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, admin_event_path(event) %></td>
        <td>From <%= event.start_date.strftime("%B %d, %Y") %> to <%= event.end_date.strftime("%B %d, %Y") %></td>
        <td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
        <td><%= button_to 'Destroy', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_admin_event_path %>
